@{
    ViewData["Title"] = "Home Page";
}

<h3 style="color:crimson; font-family:Comic Sans MS", cursive, sans-serif">This is but a humble collaboration between Tom and Jon</h3>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/payroll.jpg" alt="Payroll photo1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <h3 style="color:crimson">
                        This button does nothing...Dont Hit it
                    </h3>
                    <a class="btn btn-default" style="color:crimson; font-family:monospace" href="https://www.google.com/search?q=ok%2C+it+does+something&rlz=1C1WERZ_enUS696US696&oq=ok%2C+it+does+something&aqs=chrome..69i57j33.7673j1j4&sourceid=chrome&ie=UTF-8">
                        Hit it anyway
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/payroll-System.jpg" alt="Payroll photo2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <h3 style="color:crimson">
                        Ok, this one REALLY doesn't go anywhere... Really
                    </h3>
                    <a class="btn btn-default" style="color:crimson; font-family:luminari" href="https://www.google.com/search?rlz=1C1WERZ_enUS696US696&sxsrf=ACYBGNQ_WQC3jbz4NeZpqnz8EcVjAXqAPQ%3A1569866776973&ei=GESSXZn7OsiQggfAqo_wCg&q=you+are+distrustful&oq=you+are+distrust&gs_l=psy-ab.3.0.0i22i30l5.68306.71312..72968...2.1..0.161.1994.8j10......0....1..gws-wiz.......0i71j35i39j0i131i273j0i273j0i131j0j0i67j0i131i67j0i10j0i22i10i30.ag8Bdo0aaJw">
                         Hit it anyway
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
